            <listitem><para><anchor xml:id="_class_activatable_moving_object_controller_1a2be07df05869ed42fc2b2627a16ed6aa"/>float <emphasis role="strong">moveWeight</emphasis> = 1</para>
</listitem>
        </itemizedlist>
</simplesect>
